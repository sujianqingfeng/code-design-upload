{
  "manifest_version": 3,
  "name": "code-design-upload",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/contents/content.tsx"],
      "matches": ["https://codesign.qq.com/app/design/*/inspect*"]
    },
    {
      "js": ["src/contents/inject-content.ts"],
      "matches": ["https://codesign.qq.com/app/design/*/inspect*"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
